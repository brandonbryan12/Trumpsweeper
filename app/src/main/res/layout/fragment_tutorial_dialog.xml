<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="350dp"
    android:padding="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tutorial"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tut_main_text"
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:text="Trumpsweeper is a game of wits and strategy.\nThe Donald Trumps are busy getting dressed.\nYour job is to toupee all of them and uncover all non-Trump dressing rooms.\nMake sure not to open his dressing room!"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tut_advanced_text"
            android:alpha="0"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:text="Tap an uncovered tile to uncover all untoupee'd tiles around it.\nBe careful not to bother a Trump!"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Hold tile to toupee/untoupee it"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Features"
        android:paddingBottom="5dp"
        android:gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/tut_advanced"
            android:background="@drawable/ic_difficulty"
            android:text="Advanced Gameplay"
            android:layout_margin="5dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/tut_interface"
            android:text="Interface"
            android:background="@drawable/ic_difficulty"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/tut_exit"
            android:text="Exit"
            android:layout_margin="5dp"
            android:background="@drawable/ic_difficulty"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Visit the settings page to view again"
        android:textSize="10dp"
        android:gravity="center_horizontal"/>

</LinearLayout>