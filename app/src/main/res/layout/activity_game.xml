<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.brandon.rubecube.Activities.GameActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:weightSum="2"
            android:gravity="center">

            <com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/fragment_game_containter">
            </com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout>

            <com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/fragment_game_end_containter">

            </com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout>
        </RelativeLayout>



        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="1"
            android:gravity="center"
            android:id="@+id/fragment_bottom_containter">

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
