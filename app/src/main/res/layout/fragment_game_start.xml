<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brandonferrell.trumpsweeper.fragments.GameStartFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:baselineAligned="false"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/apprentice"
                android:id="@+id/d_beginner"
                android:layout_gravity="center|bottom"
                android:scaleType="fitXY"
                android:background="@drawable/ic_difficulty"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1.3"
                android:text="@string/ceo"
                android:id="@+id/d_intermediate"
                android:layout_gravity="center|bottom"
                android:scaleType="fitXY"
                android:background="@drawable/ic_difficulty"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/president"
                android:id="@+id/d_expert"
                android:layout_gravity="center|bottom"
                android:scaleType="fitXY"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/ic_difficulty"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/start_game"
                android:id="@+id/start_button"
                android:scaleType="fitXY"
                android:background="@drawable/ic_difficulty"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
